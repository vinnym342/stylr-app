<%= form_for(styleboard) do |f| %>
  <% if styleboard.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(styleboard.errors.count, "error") %> prohibited this styleboard from being saved:</h2>

      <ul>
      <% styleboard.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :name %>
    <%= f.text_area :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label "Public (anyone can post photos)" %>
    <%= f.check_box :public %>
  </div>

  <div class="field">
    <%= f.label :photo %><br>
    <%= f.file_field :photo %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
